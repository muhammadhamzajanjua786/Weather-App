<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialButtonWithIconStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAppearance">@style/WeatherButtonSmallStyle</item>
        <item name="android:textSize">@dimen/text_size_weather_button_small</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:padding">0dp</item>
        <item name="iconTint">@color/blue_gray</item>
        <item name="iconSize">@dimen/button_large_icon_size</item>
        <item name="android:strokeWidth">0</item>
        <item name="strokeWidth">0dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="StandardMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/deep_blue</item>
        <item name="android:textAppearance">@style/WeatherButtonMediumStyle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_weather_button_medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/six_dp</item>
    </style>
</resources>